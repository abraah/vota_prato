<div class="pages-action">
<h1><i class="fa fa-laptop"></i> Mostrar Restaurante</h1>
<span>
<%= link_to '<i class="fa fa-chevron-left"></i> Voltar'.html_safe, restaurantes_path, class: 'btn btn-md btn-info' %>
<%= link_to '<div class="btn btn-md btn-success"><i class="fa fa-check"></i> Qualificar</div>'.html_safe, controller: 'qualificacoes', action: 'new', restaurante: @restaurante  %>
</span>
</div>

<div class="panel panel-black">
    <div class="panel-heading panel-color">
        <h3 class="panel-title">Dados do restaurante</h3>
    </div>
    <div class="panel-body">
        <strong>Nome:</strong>
        <%= @restaurante.nome %><br>

        <strong>Endereço:</strong>
        <%= @restaurante.endereco %><br>

        <strong>Especialidade:</strong>
        <%= @restaurante.especialidade %><br><br>

      <b>Nota média: </b><%= @restaurante.qualificacoes.maximum(:nota) %><br/>
      <b>Qualificações: </b> <%= @restaurante.qualificacoes.count %><br/>
      <b>Preço médio: </b><%= @restaurante.qualificacoes.maximum(:valor_gasto)%><br/>
      <br/>
    </div>
</div>
