<div class="pages-action">
<h1><i class="fa fa-cutlery"></i> Restaurantes</h1>
<span>
<%= link_to '<i class="fa fa-plus"></i> Novo'.html_safe, new_restaurante_path, class: 'btn btn-md btn-success' %>
<%= link_to '<i class="fa fa-refresh"></i> Atualizar'.html_safe, '/restaurantes/', class: 'btn btn-md btn-info' %>
</span>
</div>

<div class="panel panel-black">
    <div class="panel-heading panel-color">
        <h3 class="panel-title">Listagem de restaurantes</h3>
    </div>
<div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>EndereÃ§o</th>
            <th>Especialidade</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurantes.each do |restaurante| %>
            <tr>
              <td><%= restaurante.id %></td>
              <td><%= restaurante.nome %></td>
              <td><%= restaurante.endereco %></td>
              <td><%= restaurante.especialidade %></td>
              <td>
              <%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, edit_restaurante_path(restaurante), class: 'btn btn-md btn-success' %>
              <%= link_to '<i class="fa fa-laptop"></i> Mostrar'.html_safe, restaurante, class: 'btn btn-md btn-info' %>
              <%= link_to '<i class="fa fa-times"></i> Deletar'.html_safe, restaurante, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-md btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
</div>
