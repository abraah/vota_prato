<div class="pages-action">
<h1><i class="fa fa-user"></i> Clientes</h1>
<span>
<%= link_to '<i class="fa fa-plus"></i> Novo'.html_safe, new_cliente_path, class: 'btn btn-md btn-success' %>
<%= link_to '<i class="fa fa-refresh"></i> Atualizar'.html_safe, '/clientes/', class: 'btn btn-md btn-info' %>
</span>
</div>

<div class="panel panel-black">
    <div class="panel-heading panel-color">
        <h3 class="panel-title">Listagem de clientes</h3>
    </div>
<div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Idade</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @clientes.each do |cliente| %>
            <tr>
              <td><%= cliente.id %></td>
              <td><%= cliente.nome %></td>
              <td><%= cliente.idade %></td>
              <td>
              <%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, edit_cliente_path(cliente), class: 'btn btn-md btn-success' %>
              <%= link_to '<i class="fa fa-laptop"></i> Mostrar'.html_safe, cliente, class: 'btn btn-md btn-info' %>
              <%= link_to '<i class="fa fa-times"></i> Deletar'.html_safe, cliente, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-md btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
</div>
