<div class="pages-action">
<h1><i class="fa fa-laptop"></i> Mostrar Cliente</h1>
<span>
<%= link_to '<i class="fa fa-chevron-left"></i> Voltar'.html_safe, clientes_path, class: 'btn btn-md btn-info' %>
<%= link_to '<div class="btn btn-md btn-success"><i class="fa fa-check"></i> Qualificar</div>'.html_safe, controller: 'qualificacoes', action: 'new', cliente: @cliente  %>
</span>
</div>

<div class="panel panel-black">
    <div class="panel-heading panel-color">
        <h3 class="panel-title">Dados do cliente</h3>
    </div>
    <div class="panel-body">
        <p>
          <strong>Nome:</strong>
          <%= @cliente.nome %>
        </p>

        <p>
          <strong>Idade:</strong>
          <%= @cliente.idade %>
        </p>
    </div>
</div>
